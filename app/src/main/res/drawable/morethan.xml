<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Effect -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#B0B0B0" /> <!-- Shadow color -->
        </shape>
    </item>

    <!-- Main Box -->
    <item android:bottom="4dp" android:left="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#FFFFFF" /> <!-- White background -->
            <stroke android:width="2dp" android:color="#DDDDDD" /> <!-- Light gray border -->
        </shape>
    </item>

</layer-list>
